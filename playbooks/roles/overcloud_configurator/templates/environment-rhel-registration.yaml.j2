parameter_defaults:
{% if RH_REG_METHOD == 'satellite' %}
  rhel_reg_activation_key: "{{ SATELLITE_KEY }}"
{% else %}
  rhel_reg_activation_key: ""
{% endif %}
{% if RH_AUTO_ATTACH == 'yes' %}
  rhel_reg_auto_attach: "true"
{% else %}
  rhel_reg_auto_attach: ""
{% endif %}
  rhel_reg_base_url: ""
  rhel_reg_environment: ""
  rhel_reg_force: ""
  rhel_reg_machine_name: ""
{% if RH_REG_METHOD == 'satellite' %}
  rhel_reg_org: "{{ SATELLITE_ORG }}"
{% else %}
  rhel_reg_org: ""
{% endif %}
{% if RH_REG_METHOD == 'portal' and RH_REG_METHOD != 'satellite'%}
  rhel_reg_password: "{{ RH_PORTAL_PASSWORD }}"
{% else %}
  rhel_reg_password: ""
{% endif %}
{% if RH_POOL_ID and RH_AUTO_ATTACH != 'yes' %}
  rhel_reg_pool_id: "{{ RH_POOL_ID }}"
{% else %}
  rhel_reg_pool_id: ""
{% endif %}
{% if RHEL_VERSION %}
  rhel_reg_release: "{{ RHEL_VERSION }}"
{% else %}
  rhel_reg_release: ""
{% endif %}
{% if OPENSTACK_VERSION=="ocata" %}
  rhel_reg_repos: "rhel-7-server-rpms rhel-7-server-extras-rpms rhel-7-server-rh-common-rpms rhel-ha-for-rhel-7-server-rpms rhel-7-server-openstack-11-rpms rhel-7-server-openstack-11-devtools-rpms"
{% endif %}
{% if OPENSTACK_VERSION=="newton" %}
  rhel_reg_repos: "rhel-7-server-rpms rhel-7-server-extras-rpms rhel-7-server-rh-common-rpms rhel-ha-for-rhel-7-server-rpms rhel-7-server-openstack-10-rpms rhel-7-server-openstack-10-devtools-rpms"
{% endif %}
{% if RH_REG_METHOD == 'satellite' %}
  rhel_reg_sat_url: "http://{{ SATELLITE_FQDN }}"
{% else %}
  rhel_reg_sat_url: ""
{% endif %}
  rhel_reg_server_url: ""
  rhel_reg_service_level: ""
{% if RH_REG_METHOD == 'portal' and RH_REG_METHOD != 'satellite'%}
  rhel_reg_user: "{{ RH_PORTAL_USER }}"
{% else %}
  rhel_reg_user: ""
{% endif %}
  rhel_reg_type: ""
{% if RH_REG_METHOD == 'satellite' %}
  rhel_reg_method: "satellite"
  rhel_reg_sat_repo: "rhel-7-server-satellite-tools-{{ SATELLITE_VERSION }}-rpms"
{% else %}
  rhel_reg_method: ""
  rhel_reg_sat_repo: ""
{% endif %}
  rhel_reg_http_proxy_host: ""
  rhel_reg_http_proxy_port: ""
  rhel_reg_http_proxy_username: ""
  rhel_reg_http_proxy_password: ""
