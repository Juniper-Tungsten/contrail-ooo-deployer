{% endif %}


{% for nic in controller_nic_layout %}
{% if 'Network' in nic.values()[0] %}
{% if nic.values()[0].Network == 'External' %}
  OS::TripleO::Controller::Ports::ExternalPort: ../network/ports/external.yaml
